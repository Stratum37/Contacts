@using Contacts.Domain.Entities
@model IEnumerable<Contact>

<div class="card shadow border-0 mt-3 col-12">
    <div class="card-header bg-secondary bg-gradient m-0 py-4">
        <div class="col-6 text-center">
            <h4 class="py-0 text-white">Editing Contact</h4>
        </div>
    </div>
    <div class="card-body p-4">
        <table width="100%" class="table table-bordered table-striped p-3">
            <tr>
                <th>Photo</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Description</th>
                <th colspan="2"></th>
            </tr>
            <tr>
                <td><img src="" style="width:80px;" /></td>
                <td>John</td>
                <td>Smith</td>
                <td>555-1235</td>
                <td>johnsmith@internet</td>
                <td>Lorem ipsum and so on - example record</td>
                <td></td>
                <td></td>
            </tr>

            @foreach (var Contact in Model)
            {
                <tr>
                    <td><img src="@Contact.PhotoURL" style="width:80px;" /></td>
                    <td>@Contact.ContactFirstName</td>
                    <td>@Contact.ContactLastName</td>
                    <td>@Contact.ContactPhoneNumber</td>
                    <td>@Contact.ContactEmail</td>
                    <td>@Contact.Description</td>
                    <td>
                        <a asp-controller="Contact" asp-action="Contact" asp-route-ContactId=@Contact.Id class="btn btn-primary">Edit</a>
                    </td>
                    <td>
                        <a asp-controller="Contact" asp-action="DeleteContact" asp-route-ContactId=@Contact.Id class="btn btn-danger">Delete</a>
                    </td>
                </tr>

            }

        </table>
    </div>
</div>